Module Cifre
    Sub Main()
        Dim number, digit, divider, degree As Integer
        Dim str_number As String
        Console.WriteLine("Insert your number:")
        number = Console.ReadLine
        str_number = number.ToString
        degree = str_number.Length - 1

        While (degree >= 0)
            divider = Math.Pow(10, degree)
            digit = Conversion.Int(number \ divider)
            Console.Write("{0}", digit & ",")
            number = number Mod divider
            degree -= 1
        End While
        Console.ReadKey()
    End Sub
End Module
