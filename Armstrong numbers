Imports System.IO
Module Armstrong
    Sub Main()
        Dim number, res As Integer
        Console.WriteLine("Insert number:")
        number = Console.ReadLine
        res = Armstrong(number)
        If res = number Then
            Console.WriteLine("The number {0} is Armstrong number!", res)
        Else
            Console.WriteLine("The number is not Armstrong number!")
        End If
        Console.ReadLine()
    End Sub
    
    'Writing recursive function which checks if inserted number is Armstrong number or not:
    Private Function Armstrong(ByVal num As Integer) As Integer
        If num Then
            Return Math.Pow(num Mod 10, 3) + Armstrong(Conversion.Int(num \ 10))
        End If
        Return num
    End Function
End Module
