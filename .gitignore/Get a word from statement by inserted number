Module Module1

    Sub Main()
        Dim myStr, rep As String
        Dim n, fpos, lpos, i, num As Integer
        Console.WriteLine("Insert your statement here (only blank spaces) :")
        myStr = Console.ReadLine
        Console.WriteLine("Insert n:")
        n = Console.ReadLine
        num = 1 'First word 
        For i = 0 To myStr.Length - 1
            If myStr(i) = " " Then
                num += 1
                If num = n Then
                    fpos = i + 1 'Remove first blank space
                End If
                If num = n + 1 Then
                    lpos = i
                ElseIf n + 1 >= num Then
                    lpos = myStr.Length
                End If
            End If
        Next
        If n > num Then
            Console.WriteLine("Statement has {0} words!", num)
            Console.ReadKey()
            Exit Sub
        End If

        rep = myStr.Substring(fpos, lpos - fpos)
        Console.WriteLine("{0}", rep)
        Console.ReadKey()
    End Sub

End Module
