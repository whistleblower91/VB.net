Imports System.IO
Module Module1
    Sub Main()
        Dim drivename As String = LargerDrive()
        MsgBox("The fixed drive with the most free space avaliable is " & drivename)
    End Sub
    Public Function LargerDrive() As String
        Dim drive As DriveInfo
        Dim size, max As Long
        Dim name As String
        name = ""
        max = 0
        For Each drive In DriveInfo.GetDrives
            If drive.DriveType = 3 Then
                size = Conversion.Int(drive.TotalFreeSpace \ Math.Pow(1024, 2))
                If size > max Then
                    max = size
                    name = drive.Name
                End If
            End If
        Next
        LargerDrive = name
    End Function
End Module
